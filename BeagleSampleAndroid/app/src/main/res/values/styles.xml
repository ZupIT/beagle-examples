<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorOrange</item>
        <item name="android:textColorHint">@color/colorGray</item>
        <item name="android:scrollbarThumbVertical">@color/colorGray</item>
        <item name="android:scrollbarThumbHorizontal">@color/colorGray</item>
        <item name="android:windowBackground">@color/colorWhite</item>
        <item name="colorControlNormal">@color/colorBlack</item>
    </style>

    <style name="TextDefault" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextStyle" parent="TextDefault">
        <item name="android:textColor">@color/colorOrange</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextStyleAccountBalance" parent="TextDefault">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextValueStyleAccountBalance" parent="TextDefault">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="TextTitleProfile" parent="TextDefault">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextAccessProfile" parent="TextDefault">
        <item name="android:textColor">@color/colorGray</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextTemplateCard" parent="TextDefault">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">14sp</item>
    </style>


    <style name="TextInput" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColorHint">@color/colorBlack</item>
    </style>

    <style name="DesignSystem.Toolbar.Center" parent="Widget.AppCompat.Toolbar">
        <item name="titleTextAppearance">@style/DesignSystem.Toolbar.TextAppearance</item>
        <item name="backgroundColor">@color/colorWhite</item>
        <item name="centerTitle">true</item>
    </style>

    <style name="DesignSystem.Toolbar.TextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="DesignSystem.Button.Default" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@color/colorOrange</item>
    </style>

    <style name="DesignSystem.Button.PageBullet" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/colorOrange</item>
        <item name="android:background">#66272E39</item>
    </style>

    <style name="DesignSystem.Text.BannerTitle" parent="TextDefault">
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="DesignSystem.Text.BannerDescription" parent="TextDefault">
        <item name="android:textColor">@color/colorOrange</item>
        <item name="android:textSize">45sp</item>
    </style>

</resources>
